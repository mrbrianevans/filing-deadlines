{
  "compilerOptions": {
    "module": "esnext",
    "target": "ES2021",
    "sourceMap": true,
    "moduleResolution": "node",
    "strictNullChecks": true,
    "composite": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "importsNotUsedAsValues": "error"
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "**/*.ts", "companiesHouseApi/filingDescriptions.json"
  ],
  "references": [
    {
      "path": "../fs-shared"
    }
  ]
}
