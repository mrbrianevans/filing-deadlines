{
  "compilerOptions": {
    "module": "esnext",
    "target": "ES2021",
    "sourceMap": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": true,
    "skipLibCheck": true, // to fix fastify session errors
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "**/*.ts",
    "types/*.d.ts"
  ],
  "references": [
    {
      "path": "../fs-shared"
    },
    {
      "path": "../backend-shared"
    }
  ]
}
